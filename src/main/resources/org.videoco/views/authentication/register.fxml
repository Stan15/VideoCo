<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../styles/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.videoco.views.authentication.RegisterView">
   <children>
      <TextField fx:id="firstName" layoutX="169.0" layoutY="102.0" prefHeight="26.0" prefWidth="114.0" promptText="First name" AnchorPane.leftAnchor="169.0" />
      <TextField fx:id="lastName" layoutX="308.0" layoutY="102.0" prefHeight="26.0" prefWidth="114.0" promptText="Last name" />
      <TextField fx:id="email" layoutX="169.0" layoutY="147.0" prefHeight="26.0" prefWidth="253.0" promptText="Email" />
      <PasswordField fx:id="password" layoutX="169.0" layoutY="192.0" prefHeight="26.0" prefWidth="114.0" promptText="Password" />
      <PasswordField fx:id="confirmPassword" layoutX="308.0" layoutY="192.0" prefHeight="26.0" prefWidth="114.0" promptText="Confirm" />
      <Hyperlink layoutX="169.0" layoutY="296.0" onAction="#switchToLoginScreen" text="Sign in instead" />
      <Button layoutX="324.0" layoutY="293.0" mnemonicParsing="false" onAction="#createAccount" stylesheets="@../../styles/main.css" text="Create account" />
